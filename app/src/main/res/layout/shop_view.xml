                    app:srcCompat="@drawable/cart"
                    android:id="@+id/imageView23"
                    android:layout_width="41dp"
                    android:layout_height="80dp" />

                <ImageView
                    android:layout_width="80dp"
                    app:srcCompat="@drawable/otoyashikaku"
                    android:id="@+id/imageView231"
                    android:layout_height="80dp" />


